%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:preferences, :index)
  %li.active=link_to tag_icon(:plus, pat(:new)), url(:preferences, :new)

.tabs-content
  = form_for :preference, url(:preferences, :create), :class => 'form-horizontal' do |f|
    =partial 'preferences/form', :locals => { :f => f }
