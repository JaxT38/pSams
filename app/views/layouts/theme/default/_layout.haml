#envelope
  #header
    .logo
      =theme_image("logo.gif", :alt=>"RBE Logo")
    .company
      %a{:href => "/", :style => "text-decoration:none;color:#000;"} Rude Boy Enterprises
    #menu
      %ul
        =partial "layouts/menu"
  #body
    #content
      = yield_content :page_content
  #sidebar
    #newsTitle News
    .accordion
      = partial "layouts/sidebar"
  #footer
    #copyright
      Rude Boy Enterprises is Samuel C. Tyler (AKA "Skaman Sam"). 
      %a{:href=>"https://www.gnu.org/copyleft/gpl.html"} All Content and Related Software Copylefted under GPL &copy; 1997-#{Time.now.year}.
    :javascript
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    :javascript
      var pageTracker = _gat._getTracker("UA-4371156-1");
      pageTracker._initData();
      pageTracker._trackPageview();
    #f_badges
      = link_to image("w3xhtml.png", :alt=>"Valid XHTML 1.0 Transitional").html_safe, "http://validator.w3.org/check?uri=#{request.base_url+current_path}"
      = link_to image("w3css.png", :alt=>"Valid CSS!").html_safe, "http://jigsaw.w3.org/css-validator/validator?uri=#{request.base_url+current_path}"
      = link_to image("firebug.png", :alt=>"Tested With Firebug").html_safe, "http://getfirebug.com/"
    #f_text
      =# `fortune -s computers linuxcookie hitchhiker kernelnewbies perl`
  / END FOOTER
