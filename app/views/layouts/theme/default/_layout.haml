#envelope
  #header
    .logo
      =theme_image("logo.gif", :alt=>"RBE Logo")
    .company
      %a{:href => "/", :style => "text-decoration:none;color:#000;"} Rude Boy Enterprises
    #menu
      = category_menu(Category.top_level, class: 'menu', submenu_class: 'submenu')
  #body
    #content
      = yield_content :page_content
  #sidebar
    #newsTitle News
    .accordion
      = partial "layouts/news"
    .post-tag-cloud.block
      .title Tags
      .body
        = post_tag_cloud
  #footer
